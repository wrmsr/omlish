/* Container */

#messages-container {
    width: 100%;
    height: 1fr;

    scrollbar-gutter: stable;

    background: $background-darken-3;

    text-align: left;

    scrollbar-size: 1 1;
}


/* Base */

.message {
    width: 1fr;
    height: auto;

    margin: 1 0 0 0;

    padding-right: 1;

    layout: stream;
}


/* Welcome */

.welcome-message {
    padding: 1 2 1 1;

    border: round;
}

.welcome-message-outer {
    width: 1fr;
    height: auto;
}

.welcome-message-content {
    text-align: center;
}


/* User */

.user-message {
}

.user-message-outer {
    width: 1fr;
    height: auto;
}

.user-message-glyph {
    width: auto;
    height: auto;

    background: transparent;
    color: $primary;

    text-style: bold;
}

.user-message-inner {
    width: 1fr;
    height: auto;
}


/* Ai */

.ai-message {
}

.ai-message-outer {
    width: 1fr;
    height: auto;

    align: left top;
}

.ai-message-glyph {
    width: auto;
    height: auto;

    background: transparent;
    color: $primary;

    text-style: bold;
}

.ai-message-inner {
    width: 1fr;
    height: auto;

    padding: 0;

    Markdown {
        width: 100%;
        height: auto;

        margin: 0;
        padding: 0;
    }
}


/* Tool Confirmation */

.tool-confirmation-message {
}

.tool-confirmation-message-outer {
    width: 1fr;
    height: auto;

    align: left top;
}

.tool-confirmation-message-glyph {
    width: auto;
    height: auto;

    background: transparent;
    color: $primary;

    text-style: bold;
}

.tool-confirmation-message-inner {
    width: 1fr;
    height: auto;

    padding: 1;
}

.tool-confirmation-message-inner-open {
    background: $warning-lighten-3 15%;
}

.tool-confirmation-message-inner-closed {
}

.tool-confirmation-message-content {
    background: $background;
}

.tool-confirmation-message-controls {
    margin-top: 1;
}
