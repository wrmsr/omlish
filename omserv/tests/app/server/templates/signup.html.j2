{% extends "base.html.j2" %}

{% from 'macros.html.j2' import flash_messages with context %}

{% block content %}

    <div class="column is-4 is-offset-4">

        <h3 class="title">Sign Up</h3>

        <div class="box">

            {{ flash_messages() }}

            <form method="POST" action="{{ url_for('signup') }}">

                <div class="field">
                    <div class="control">
                        <label for="email">Email</label>
                        <input
                                id="email"
                                class="input is-large"
                                type="email"
                                name="email"
                                autocomplete="email"
                                placeholder="Email"
                                autofocus=""
                                required
                        >
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <label for="name">Name</label>
                        <input
                                id="name"
                                class="input is-large"
                                type="text"
                                name="name"
                                placeholder="Name"
                                autofocus=""
                                required
                        >
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <label for="password">Password</label>
                        <input
                                id="password"
                                class="input is-large"
                                type="password"
                                name="password"
                                autocomplete="new-password"
                                placeholder="Password"
                                required
                        >
                    </div>
                </div>

                <button class="button is-block is-info is-large is-fullwidth">Sign Up</button>

            </form>

        </div>

    </div>

{% endblock %}
